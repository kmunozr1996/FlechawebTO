<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flecha Aleatoria</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
            text-align: center;
        }
        .arrow {
            width: 100px;
            height: auto;
            transition: opacity 0.5s;
            margin-bottom: 20px;
        }
        .counter {
            font-size: 20px;
            margin-bottom: 20px;
        }
        .btn {
            font-size: 18px;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            background-color: #FEF20D; /* Botón amarillo */
            color: black;
            border-radius: 5px;
        }
        .btn:active {
            background-color: #e5d400;
        }
    </style>
</head>
<body>
    <img src="" class="arrow" id="arrow" style="display: none;">
    <div class="counter" id="counter">Cambios: 0</div>
    <button class="btn" id="toggleButton">Iniciar</button>

    <script>
        let intervalId = null;
        let changeCount = 0;
        let lastSequence = [];
        const arrowElement = document.getElementById("arrow");
        const counterElement = document.getElementById("counter");
        const buttonElement = document.getElementById("toggleButton");

        const arrowLeft = "flecha_izquierda.png";
        const arrowRight = "flecha_derecha.png";

        function getRandomArrow() {
            return Math.random() < 0.5 ? "left" : "right";
        }

        function generateNewSequence() {
            let newSequence = [];
            for (let i = 0; i < 10; i++) { // Genera un patrón aleatorio de 10 cambios
                newSequence.push(getRandomArrow());
            }
            return newSequence;
        }

        function changeArrow() {
            arrowElement.style.opacity = "0"; // Oculta la flecha antes de cambiar

            setTimeout(() => {
                let newArrow = lastSequence.shift();
                if (newArrow === "left") {
                    arrowElement.src = arrowLeft;
                } else {
                    arrowElement.src = arrowRight;
                }
                arrowElement.style.display = "block";
                arrowElement.style.opacity = "1"; // Vuelve a aparecer
                changeCount++;
                counterElement.textContent = "Cambios: " + changeCount;
            }, 500); // Se oculta por 0.5 segundos antes de cambiar
        }

        function toggleArrowRotation() {
            if (intervalId) {
                clearInterval(intervalId);
                intervalId = null;
                buttonElement.textContent = "Iniciar";
                changeCount = 0; // Reiniciar contador
                counterElement.textContent = "Cambios: 0";
                lastSequence = []; // Reiniciar la secuencia
                arrowElement.style.display = "none"; // Ocultar flecha al detener
            } else {
                lastSequence = generateNewSequence(); // Nueva secuencia aleatoria al iniciar
                changeArrow();
                intervalId = setInterval(changeArrow, 3000);
                buttonElement.textContent = "Detener";
            }
        }

        buttonElement.addEventListener("click", toggleArrowRotation);
    </script>
</body>
</html>
